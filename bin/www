#!/usr/bin/env node
var debug   = require('debug')('workspace');
var app     = require('../app');

var requser = require('user');

//var userobj = new user();

app.set('port', process.env.PORT || 3000);

var server = app.listen(app.get('port'), function() {
  debug('Express server listening on port ' + server.address().port);
});

/*
    # Работает с подключенными игроками
    #
    #
*/

var players = [ /* ### obj User ### */ ];

var io = require('socket.io')(server);

io.on('connection' , function(socket){
    var user = new requser();
    user.setSocket(socket);
    
    socket.on('registr' , function(data){
        user.registr(data);
        
        if(user.id !== undefined){
            players.push(user);
                
            console.log('Players online: ');
            for(var i = 0; i < players.length; i++){
                debug('id: ' + players[i].id);
            }
        }
    });
    
    socket.on('disconnect' , function(){
        deleteUser(user.id , players);
    });
});

function deleteUser(id , players){
    var i           = 0;
    var controll    = true;
    
    while(controll){
        if(players[i].id === id){
            players.splice(i , 1);
            controll = false;
        }
        i++;
        if(i === players.length) controll = false;
    }
}